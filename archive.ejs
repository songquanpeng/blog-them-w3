<%- include('./partials/header') %>

<div class="w3-content" style="max-width:960px;">
    <table style='width: 100%; margin-top: 32px'>
        <thead>
        <tr>
            <th>标题</th>
            <th>发布时间</th>
            <th>编辑时间</th>
        </tr>
        </thead>
        <tbody>
        <% pages.forEach(page => { %>
            <tr>
                <td>
                    <a href="/page/<%= page.link %>">
                        <%= page.title %>
                    </a>
                </td>
                <td>
                    <time>
                        <%= page.createdAt.substring(0, 10) %>
                    </time>
                </td>
                <td>
                    <time>
                        <%= page.updatedAt.substring(0, 10) %>
                    </time>
                </td>
            </tr>
        <% }) %>
        </tbody>
    </table>
</div>

<%- include('./partials/footer') %>
