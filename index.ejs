<%- include('./partials/header') %>
<div class="w3-content" style="max-width:1400px">
    <div class="w3-row">
        <!--Articles here-->
        <div class="w3-col l8 s12">
            <% if (pages.length){ %>
                <% pages.forEach((page)=>{ %>
                    <!--Article here-->
                    <div class="w3-card-4 w3-margin w3-white">
                        <div class="w3-container">
                            <h3><b><%= page.title !== '' ? page.title : 'No title' %></b></h3>
                            <% page.tag.trim().split(" ").forEach(function (tag) { if(tag !== ""){ %>
                                <span class="w3-tag w3-deep-orange tag"><a href='/tag/<%= tag %>' style="color: white"><%= tag %></a></span>
                            <% }}); %>
                            <span class="w3-tag w3-black tag">
                                <%= page.author %>
                            </span>
                            <span class="w3-tag w3-black tag">
                                <a href="/archive/<%= page.post_time.split('-')[0] + '/' + page.post_time.split('-')[1] %>"><%= page.post_time.substring(0, 10) %></a>
                            </span>
                            <span class="w3-tag w3-black tag">Views: <%= page.view %></span>
                        </div>
                        <div class="w3-container w3-large">
                            <p>
                                <%= page.description !== undefined && page.description.trim() !== "" ? page.description : "No description" %>
                            </p>
                            <div class="w3-row">
                                <div class="w3-row">
                                    <div class="w3-col m8 s12">
                                        <p>
                                            <button class="w3-button w3-padding-large w3-white w3-border"
                                                    onclick="window.location.href='/page/<%= page.link %>'"><b>READ MORE Â»</b>
                                            </button>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <hr>
                    </div>
            <% })} %>
            <%- include('./partials/paginator') %>
        </div>
        <!--Sidebar here-->
        <div class="w3-col l4">
            <div class="w3-card w3-margin w3-margin-top">
                <div class="w3-container w3-white">
                    <h3>Theme W3</h3>
                </div>
            </div>
        </div>
    </div>
    <%- include('./partials/footer') %>
</div>

