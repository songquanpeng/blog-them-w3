<div class="w3-container">
    <p class="w3-xlarge" style="font-weight: bold"><%= page.title %></p>
    <span>Tag:
        <% page.tag.trim().split(" ").forEach(function (tag) {if (tag !== "") {%>
            <span class="w3-opacity w3-tag w3-light-grey tag"><a class="tag is-light" href='/tag/<%= tag %>' style="color: black"><%= tag %></a></span>
        <% }}); %>
    </span>
    <span>Posted on <span class="w3-opacity w3-tag w3-light-grey tag"><%-page.createdAt%></span></span>
    <span>Edited on <span class="w3-opacity w3-tag w3-light-grey tag"><%-page.updatedAt%></span></span>
    <span>Views: <span class="w3-opacity w3-tag w3-light-grey tag"><%-page.view%></span></span>
</div>